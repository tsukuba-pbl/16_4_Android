<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.tsuruda_tomohiro.qrcodereader.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:textSize="50px"
        android:background="#FBC02D"
        android:gravity="center_vertical"
        android:text="    1.イベントQRを読み込む"
        android:id="@+id/btn_read_event_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="    2.投票開始"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:textSize="50px"
        android:background="#BDBDBD"
        android:gravity="center_vertical"
        android:layout_marginTop="23dp"
        android:id="@+id/btn_vote_start"
        android:layout_alignTop="@+id/vote"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="PosVote"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:textSize="150px"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp"
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp" />

    <Button
        android:text="    4.イベント終了"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:textSize="50px"
        android:background="#BDBDBD"
        android:gravity="center_vertical"
        android:layout_marginTop="36dp"
        android:id="@+id/button3"
        android:layout_below="@+id/button2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="    *ファイルクリア"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:textSize="50px"
        android:background="#BDBDBD"
        android:gravity="center_vertical"
        android:id="@+id/fileClear"
        android:layout_below="@+id/button3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="36dp" />

    <ImageView
        app:srcCompat="@mipmap/vote"
        android:layout_width="400dp"
        android:layout_height="600dp"

        android:id="@+id/vote"
        android:layout_below="@+id/btn_read_event_name"
        android:layout_toLeftOf="@+id/button2"
        android:layout_toStartOf="@+id/button2"
        android:layout_marginTop="12dp" />

    <Button
        android:text="    3.投票結果送信"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:textSize="50px"
        android:background="#BDBDBD"
        android:gravity="center_vertical"
        android:layout_marginTop="37dp"
        android:id="@+id/button2"
        android:layout_below="@+id/btn_vote_start"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
